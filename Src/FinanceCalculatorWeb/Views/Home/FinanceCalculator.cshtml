@model FinanceCalculator.Web.ViewModels.CreditCalculatorParamsVM
@{
    ViewBag.Title = "FinanceCalculator";
}

<h2 class="text-center">Кредитен калкулатор</h2>
<br />

@using (Ajax.BeginForm("FinanceCalculator", "Home", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "credit-result",
        HttpMethod = "POST"
    }, new { @class = "mediumForm" }))
{
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label>Размер на кредита</label>
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Срок (месеци)</label>
                @Html.TextBoxFor(m => m.Period, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Лихва (%)</label>
                @Html.TextBoxFor(m => m.Rate, new { @class = "form-control" })
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label>Промоционален период (месеци)</label>
                @Html.TextBoxFor(m => m.PromotionPeriod, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Промоционална лихва(%)</label>
                @Html.TextBoxFor(m => m.PromotionRate, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Гратисен период (месеци)</label>
                @Html.TextBoxFor(m => m.GratisPeriod, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label>Вид погасителен план</label>
                @Html.DropDownListFor(m => m.IsAnnuityInstallments, new SelectList(
                new[]
                {
                    new { Value = "true", Text = "Анюитетни вноски" },
                    new { Value = "false", Text = "Намаляващи вноски" },
                },
                "Value",
                "Text",
                Model
                     ), new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label>Такса кандидатстване</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.ApplicationFee, new { @class = "form-control" })
                    @Html.DropDownListFor(m => m.TreatApplicationFeeAsPercent, new SelectList(
                new[]
                {
                    new { Value = "true", Text = "%" },
                    new { Value = "false", Text = "Валута" },
                },
                "Value",
                "Text",
                Model
                     ), new { @class = "input-group-addon" })
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Такса обработка</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.ProcessingFee, new { @class = "form-control" })
                    @Html.DropDownListFor(m => m.TreatProcessingFeeAsPercent, new SelectList(
                new[]
                {
                    new { Value = "true", Text = "%" },
                    new { Value = "false", Text = "Валута" },
                },
                "Value",
                "Text",
                Model
                     ), new { @class = "input-group-addon" })
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Други такси</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.OtherInitialFees, new { @class = "form-control" })
                    @Html.DropDownListFor(m => m.TreatOtherInitialFeesAsPercent, new SelectList(
                new[]
                {
                    new { Value = "true", Text = "%" },
                    new { Value = "false", Text = "Валута" },
                },
                "Value",
                "Text",
                Model
                     ), new { @class = "input-group-addon" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label>Годишна такса управление</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.AnnualManagementFee, new { @class = "form-control" })
                    @Html.DropDownListFor(m => m.TreatAnnualManagementFeeAsPercent, new SelectList(
                new[]
                {
                    new { Value = "true", Text = "%" },
                    new { Value = "false", Text = "Валута" },
                },
                "Value",
                "Text",
                Model
                     ), new { @class = "input-group-addon" })
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Други годишни такси</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.OtherAnnualFees, new { @class = "form-control" })
                    @Html.DropDownListFor(m => m.TreatOtherAnnualFeesAsPercent, new SelectList(
                new[]
                {
                    new { Value = "true", Text = "%" },
                    new { Value = "false", Text = "Валута" },
                },
                "Value",
                "Text",
                Model
                     ), new { @class = "input-group-addon" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label>Месечна такса управление</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.MonthlyManagementFee, new { @class = "form-control" })
                    @Html.DropDownListFor(m => m.TreatMonthlyManagementFeeAsPercent, new SelectList(
                new[]
                {
                    new { Value = "true", Text = "%" },
                    new { Value = "false", Text = "Валута" },
                },
                "Value",
                "Text",
                Model
                     ), new { @class = "input-group-addon" })
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Други месечни такси</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.OtherMonthlyFees, new { @class = "form-control" })
                    @Html.DropDownListFor(m => m.TreatOtherMonthlyFeesAsPercent, new SelectList(
                new[]
                {
                    new { Value = "true", Text = "%" },
                    new { Value = "false", Text = "Валута" },
                },
                "Value",
                "Text",
                Model
                     ), new { @class = "input-group-addon" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group center-align-input">
        <input type="submit" value="Изчисли" class="btn btn-primary" />
    </div>
}

<div id="credit-result"></div>